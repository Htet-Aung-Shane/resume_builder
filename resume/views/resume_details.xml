<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="resume.ResumeDetail" name="Resume Detail">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <div class="col-md-8 offset-md-2 my-3 py-2 shadow">
                        <div class="container">
                            <div class="row align-items-start g-0">
                                <div class="col-md-3  border bg-dark">
                                    <div class="text-center mt-3 border">
                                        <img t-attf-src="data:image/png;base64,{{data.photo}}" width="130px"
                                             height="130px"
                                             class="rounded float-center border rounded-circle" alt="..."/>
                                    </div>
                                    <div class="left-side  mt-3 ms-5 text-light">
                                        <div class="contact mt-4">
                                            <h5 class="align-item-center border-bottom p-1">Contact</h5>
                                            <h6 class="mt-2">Phone</h6>
                                            <small t-esc="data.phone" class=""/>
<!--                                            -->
                                            <h6 class="mt-2">Email</h6>
                                            <small t-esc="data.email" class=""/>
<!--                                            -->
                                            <h6 class="mt-2">Address</h6>
                                            <small t-esc="data.address" class=""/>
                                        </div>
                                        <div class="education mt-4">
                                            <h5 class="align-item-center border-bottom p-1">Education</h5>

                                        </div>
                                        <div class="expertise mt-4">
                                            <h5 class="align-item-center border-bottom p-1">Expertise</h5>

                                        </div>
                                        <div class="lan mt-4">
                                            <h5 class="align-item-center border-bottom p-1">Language</h5>

                                        </div>
                                    </div>
                                </div>
                                <div class="col right-side border">
                                    <div class="border mt-5 ms-4">
                                        <h4><span t-out="data.name" class="text-uppercase"/></h4>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>

    </template>
</odoo>
